 <view class="content">
      <view class="content_top">
        <image class="userinfo-avatar"  src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="content_text">{{name}}</text>
          <!-- <text class="content_text">{{item.address}}</text>     -->
      </view>
      <image src="{{imgurl}}" mode="aspectFill" class="content_img"></image>
      <textarea  disabled="false" value="{{content}}" class="content_details"  auto-height="true" />
      <view class="content_btm">
          <view class="cut" wx:if="{{item.praise==true}}" bindtap="praiseCut" data-index="{{index}}">
            <image src="../../image/likeing.png" class="icon"></image>
          </view>
          <view class="cut" wx:else bindtap="praisecutCancel" data-index="{{index}}">
            <image src="../../image/like.png" class="icon"></image>
          </view>
          <text class="icon_name">赞</text>

          <view class="cut" wx:if="{{item.collect==true}}" bindtap="collectCut" data-index="{{index}}">
            <image src="../../image/collecting.png" class="icon"></image>
          </view>
          <view class="cut" wx:else  bindtap="collectCancel" data-index="{{index}}">
            <image src="../../image/collect.png" class="icon"></image>
          </view>
          <text class="icon_name">收藏</text >

          <view class="cut"  bindtap="share">
            <image src="../../image/share.png" class="icon"></image> 
            <!-- <button class="icons" open-type="share"></button> -->
          </view>
            <text class="icon_name">分享</text>
      </view>
    </view> 

    <view class="classname">
      <button class="create">生成海报</button>
    </view>